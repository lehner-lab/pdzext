#####paste these commands in ChimeraX command line

#Figure 5c dddgb(delC)

open ~/Desktop/mount2/chidalgo/pdzext/Data_pdzext/chimera_pdzext/chimera_pdz_new.cxs
set bgColor white
color light gray
lighting flat
graphics silhouettes true
lighting shadows false


select /B
color sel cornflower blue

select :303-310
color sel yellow green

select :395-402
color sel violet

select  :311 :378-394 :319 :332 :351 :363 :356
color sel wheat

open  ~/Desktop/mount2/chidalgo/pdzext/Data_pdzext/output_pdzext/thirdOrder_chimera_energy_term_Binding_median_dddg_C.defattr

color byattribute r:energy_term #!1 target abcs palette -0.34,#008080:0,gainsboro:0.34,#805300 key false


select  :312 :333 :337 :357 :373 :396 :397 :400 :328 :327 :372 :376
show sel atoms

contacts :337 :396 restrict both name contact1 color #ff40ff
contacts :337 :397 restrict both name contact2 color #ff40ff
contacts :337 :400 restrict both name contact3 color #ff40ff
contacts :337 :328 restrict both name contact4
contacts :337 :327 restrict both name contact5
contacts :337 :357 restrict both name contact6 color #805300 
contacts :357 :312 restrict both name contact7 color #805300 

contacts :373 :372 restrict both name contact8
contacts :373 :376 restrict both name contact9

select clear

save ~/Desktop/mount2/chidalgo/pdzext/Data_pdzext/output_pdzext/chimera_dddg_C_binding_median_illustrator.png width 2914 height 2573 supersample 3 transparentBackground true


turn y -150

save ~/Desktop/mount2/chidalgo/pdzext/Data_pdzext/output_pdzext/chimera_dddg_C_binding_median_illustrator_turn180.png width 2914 height 2573 supersample 3 transparentBackground true

###zoom manually the residues to visualise
save ~/Desktop/mount2/chidalgo/pdzext/Data_pdzext/output_pdzext/chimera_dddg_C_binding_median_illustrator_zoom.png width 2914 height 2573 supersample 3 transparentBackground true
